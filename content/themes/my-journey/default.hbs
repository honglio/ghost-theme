    if (typeof jQuery == 'undefined') {
        document.write(unescape("%3Cscript src='/assets/js/external/jquery/jquery_1_7.min.js' type='text/javascript'%3E%3C/script%3E"));
    }
    </script>
    <script type="text/javascript" src="/assets/js/external/jquery/soundjs/SoundJS.js"></script>
