{{#post}}
<footer class="post-footer">
  <h3>About Author</h3>
  <section class="at_author">
      <div class="row">
          <div class="medium-2 columns show-for-medium-up">
              <div class="at_author_image">
                  <img src="{{author.image}}" alt="{{author.name}}">
              </div>
          </div>
          <div class="medium-10 columns">
              <div class="at_author_name">
                  <h3>{{author.name}}</h3>
              </div>
              <div class="at_author_bio">
                  <p>{{author.bio}}</p>
              </div>
              <ul class="author-meta clearfix">
                  {{#if author.location}}<li>{{author.location}}</li>{{/if}}
                  {{#if author.website}}<li><a href="{{author.website}}">{{author.website}}</a></li>{{/if}}
              </ul>
          </div>
      </div>
  </section>
  <section class="at_post_share">
    <h6 class="at_post_share_title">Share this post</h6>
    <a class="at_post_share_icon" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
        <span class="fa fa-twitter-square"></span>
    </a>
    <a class="at_post_share_icon" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
        <span class="fa fa-facebook-square"></span>
    </a>
    <a class="at_post_share_icon" href="https://plus.google.com/share?url={{url absolute="true"}}"
       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
        <span class="fa fa-google-plus-square"></span>
    </a>
  </section>
<footer class="post-footer">

<div class="at_post_comments">
    {{> widgets/at_disqus }}
</div>
{{/post}}